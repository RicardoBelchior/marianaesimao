<section id="contact" class="contact-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <h1><%= t("contact.header") %></h1>
        <p class="tagline"><%= t("contact.tagline") %></p>
        <%= form_tag("/rsvp", class: "form-horizontal") do %>
          <%= hidden_field_tag :locale, I18n.locale %>
          <div class="form-group">
            <%= text_field_tag "name", nil, class: "form-control",
              placeholder: t("contact.your_name") %>
          </div>
          <div class="form-group">
            <%= select_tag "answer", options_for_select([t('contact.option_1'),
                                                         t('contact.option_2'),
                                                         t('contact.option_3')]),
            class: "form-control", include_blank: t("contact.answer") %>
          </div>
          <div class="form-group">
            <%= text_field_tag "email", nil, class: "form-control",
              placeholder: t("contact.email") %>
          </div>
          <div class="form-group">
            <%= text_area_tag "notes", nil, class: "form-control",
              placeholder: t("contact.notes") %>
          </div>
          <%= submit_tag t("contact.send"), class: "btn btn-default" %>
        <% end %>
      </div>
      <div class="col-lg-3"></div>
    </div>
  </div>
</section>
