<section id="intro" class="intro-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%= flash_messages %>
        <!-- <p class="logo"><%= image_tag('logo/logo.svg') %></p> -->
        <h1 class="home">RITA E ANTÓNIO</h1>
        <% if logged_in? %>
          <h2 class="home">Gião</h1>
          <p><%= l(Date.parse('03/06/2017'), format: :long) %></p>
        <% end %>

        <% if logged_in? %>
          <p class="arrow">
            <a class="page-scroll" href="#story">
              <%= render partial: "svgs/arrow" %>
            </a>
          </p>
        <% else %>
          <!-- <div class="disabled_div"> -->

            <% placeholder = ["city_lived"].shuffle.first %>
            <%= form_tag authenticate_path, class: "form-inline" do %>
              <%= hidden_field_tag :locale, I18n.locale %>
              <div class="form-group">
                <%= label_tag "password", nil, class: "sr-only" %>
                <%= text_field_tag "password", nil, class: "form-control psswd",
                  placeholder: t("intro.#{placeholder}") %>
              </div>
              <%= submit_tag t('intro.login_button'),
                class: "btn btn-default"  %>
            <% end %>


          <!-- </div>
          <p>
            <%= t("intro.more_info_soon") %>
          </p> -->

        <% end %>
      </div>
    </div>
  </div>
</section>
